<Application x:Class="ProjektSnake.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ProjektSnake"
             StartupUri="MainWindow.xaml">
    <!--Here are all the colors of the text, background, overlay etc.-->
    <Application.Resources>
        <SolidColorBrush x:Key="BackgroundColor">#1E1E2B</SolidColorBrush>
        <SolidColorBrush x:Key="GridBackgroundColor">#282840</SolidColorBrush>
        <SolidColorBrush x:Key="GridLineColor">#3B3C67</SolidColorBrush>
        <SolidColorBrush x:Key="TextColor">#EBEBEB</SolidColorBrush>
        <SolidColorBrush x:Key="OverlayColor">#7F000000</SolidColorBrush>
        <FontFamily x:Key= "MainFont">Assets/#Droid Sans Mono</FontFamily>
    </Application.Resources>
</Application>
